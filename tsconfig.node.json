{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "node", 
    "skipLibCheck": true,
    "noEmit": true,

    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,

    /* Strict mode */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["vite.config.ts"]
}